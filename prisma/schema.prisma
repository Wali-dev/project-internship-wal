generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Project {
  id               Int           @id @default(autoincrement())
  clientId         Int
  jobId            Int
  name             String        @db.VarChar(255)
  description      String?
  status           ProjectStatus @default(ACTIVE)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  hiredFreelancers Json          @default("[]")
  tasks            Task[]

  @@unique([jobId])
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
}

enum TaskStatus {
  TODO
  INPROGRESS
  COMPLETED
}

model Groups {
  id           Int    @id @default(autoincrement())
  groupName    String
  projectName  String
  clientId     String
  freelancers  Json   @default("[]")
  projectId    String
}

model Task {
  id          Int        @id @default(autoincrement())
  task        String
  subTask     String?
  description String?
  status      TaskStatus @default(TODO)
  freelancers Json       @default("[]")
  date        String?
  time        String?
  projectId   String?

}

model Holiday {
  id         Int      @id @default(autoincrement())
  clientId   String
  holidayName       String
  startDate  String
  endDate    String
}